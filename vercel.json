{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": ".",
        "nodeVersion": "22.x"
      }
    }
  ],
  "routes": [
    {
        "src": "/sitemap.json",
        "dest": "/api/sitemap.js"
    },
    {
        "src": "/api/pages",
        "dest": "/api/pages.js"
    },
    {
        "src": "/(.*)",
        "dest": "/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}

